{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[ruby]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "ruby.rubocopAutocorrect": "never"
        },
        "editor.defaultFormatter": "Shopify.ruby-lsp"
    },
    "[erb]": {
        "editor.defaultFormatter": "elia.erb-formatter",
        "editor.formatOnSave": true
    },
    "files.associations": {
        "*.html.erb": "erb"
    },
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //     "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        // "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[svelte]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "cSpell.userWords": [
        "Alderaan",
        "architecting",
        "blockchain",
        "Cryptographically",
        "Datetimepicker",
        "funder",
        "harlantwood",
        "Heroku",
        "HOLOMATRIX",
        "Ideyalabs",
        "Mercola",
        "meridium",
        "nlevel",
        "OCTOKIT",
        "orderbook",
        "perspect",
        "Prasad",
        "sharded",
        "sharex",
        "sveltejs",
        "Vapi",
        "vism",
        "wikinodes"
    ],
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "ruby.lint": {
        "reek": false,
        "rubocop": true,
        "ruby": false,
        "fasterer": false,
        "debride": false,
        "ruby-lint": false
    },
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnSaveTimeout": 1500,
    "editor.formatOnType": false,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.trimAutoWhitespace": true,
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "elixirLS.fetchDeps": false,
    "eslint.packageManager": "yarn",
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    "files.autoSave": "onFocusChange",
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 4000,

    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.ignoreMissingGitWarning": true,
    "markdown.extension.orderedList.autoRenumber": false,
    "plantuml.exportOutDir": ".",
    "ruby.codeCompletion": "rcodetools",
    "ruby.intellisense": false,
    "ruby.useBundler": true,
    "ruby.useLanguageServer": false,
    "solargraph.autoformat": true,
    "solargraph.formatting": true,
    "solargraph.useBundler": false,
    "window.newWindowDimensions": "maximized",
    "window.openFoldersInNewWindow": "on",
    "window.restoreWindows": "all",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "[diff]": {},
    "terminal.integrated.scrollback": 100000,
    "tabnine.experimentalAutoImports": true,
    "editor.fontFamily": "MonoLisa, iosevka, Fira Code, Hack, Inconsolata, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "MesloLGS NF, MonoLisa, iosevka",
    "terminal.integrated.localEchoStyle": "#c0c",
    "redhat.telemetry.enabled": false,
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "json.schemas": [],
    "svelte.enable-ts-plugin": true,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "workbench.panel.defaultLocation": "right",
    "plantuml.server": "https://www.plantuml.com/plantuml",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "yaml": true,
        "rust": true,
        "erb": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "security.workspace.trust.untrustedFiles": "open",
    "plantuml.java": "",
    "plantuml.render": "PlantUMLServer",
    "workbench.editor.showTabs": "multiple",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "workbench.colorTheme": "Night Owl (No Italics)",
    "editor.unicodeHighlight.invisibleCharacters": false,
    "extensions.ignoreRecommendations": true,
    "remote.SSH.defaultExtensions": [
        "gitpod.gitpod-remote-ssh"
    ],
    "git.openRepositoryInParentFolders": "always",
    "erb-formatter.commandPath": "/Users/knight/.rbenv/shims/erb-format",
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "window.zoomLevel": 1,
    "python.defaultInterpreterPath": "/Users/knight/miniconda3/envs/web-ui/bin/python",
    "codeium.enableCodeLens": false,
    "workbench.editor.empty.hint": "hidden",
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.renderWhitespace": "none",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.customLabels.enabled": true,
    "workbench.editor.customLabels.patterns": {
        "**/+page.svelte": "${dirname(2)}/${dirname(1)}/${dirname} (svelte)",
        "**/+page.server.ts": "${dirname(2)}/${dirname(1)}/${dirname} (server.ts)"
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "scminput"
    ],
    "windsurf.autocompleteSpeed": "fast",
    "windsurf.autoExecutionPolicy": "auto",
    "windsurf.chatFontSize": "default",
    "windsurf.rememberLastModelSelection": true,
    "windsurf.openRecentConversation": true,
    "windsurf.explainAndFixInCurrentConversation": true,
    "windsurf.cascadeCommandsDenyList": [
        "rm"
    ],
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "fish": {
            "path": "fish",
            "args": [
                "-l"
            ]
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    }
}
